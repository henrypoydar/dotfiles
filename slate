layout mbpro13            'HipChat'           move ${pos-fill} ${mon-mbpro13}
layout mbpro13            'iTerm'             move ${pos-fill} ${mon-mbpro13}
layout mbpro13            'Sublime Text'      move ${pos-fill} ${mon-mbpro13}
layout mbpro13            'MacVim'            move ${pos-fill} ${mon-mbpro13}
