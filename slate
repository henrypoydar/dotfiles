# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Monitor aliases
alias mon-thunderbolt 2560x1440
alias mon-air11       1366x768
#alias mon-mbpro15     2880x1800
alias mon-mbpro15     1440x900
#alias mon-mbpro13     2560x1600
alias mon-mbpro13     1280x800

# Modal/sequence aliases
alias modal-seq cmd,shift

# Position aliases
alias pos-mid      screenOriginX+screenSizeX/8;screenOriginY+screenSizeY/8 3*screenSizeX/4;3*screenSizeY/4
alias pos-left     screenOriginX;screenOriginY                             screenSizeX/2;screenSizeY
alias pos-right    screenOriginX+screenSizeX/2;screenOriginY               screenSizeX/2;screenSizeY
alias pos-fill     screenOriginX;screenOriginY                             screenSizeX;screenSizeY
alias pos-left-gr  screenOriginX;screenOriginY                             screenSizeX*.62;screenSizeY
alias pos-right-gr screenOriginX+screenSizeX*.62;screenOriginY             screenSizeX*.38;screenSizeY
alias pos-avg      screenOriginX;screenOriginY                             1366;768

# Position bindings
bind m:${modal-seq} move ${pos-mid}
bind 3:${modal-seq} move ${pos-avg}
bind 0:${modal-seq} move ${pos-fill}
bind 6:${modal-seq} move ${pos-left}
bind 7:${modal-seq} move ${pos-right}
bind 8:${modal-seq} move ${pos-left-gr}
bind 9:${modal-seq} move ${pos-right-gr}

# Grid
bind 5:${modal-seq} grid

# Layouts

default mbpro13 resolutions:${mon-mbpro13}
default mbpro15 resolutions:${mon-mbpro15}
default air11   resolutions:${mon-air11}
default mbpro15-thunderbolt resolutions:${mon-mbpro15};${mon-thunderbolt}

layout mbpro15-thunderbolt 'Calendar'          move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'Google Chrome'     move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'HipChat'           move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'iTerm'             move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'MacVim'            move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'Sublime Text'      move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'Mailplane 3'       move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'Mail'              move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'Microsoft Outlook' move ${pos-mid} ${mon-thunderbolt}
layout mbpro15-thunderbolt 'Things'            move ${pos-mid} ${mon-thunderbolt}

layout air11              'Calendar'          move ${pos-fill} ${mon-air11}
layout air11              'Google Chrome'     move ${pos-fill} ${mon-air11}
layout air11              'HipChat'           move ${pos-fill} ${mon-air11}
layout air11              'iTerm'             move ${pos-fill} ${mon-air11}
layout air11              'MacVim'            move ${pos-fill} ${mon-air11}
layout air11              'Sublime Text'      move ${pos-fill} ${mon-air11}
layout air11              'Mailplane 3'       move ${pos-fill} ${mon-air11}
layout air11              'Mail'              move ${pos-fill} ${mon-air11}
layout air11              'Microsoft Outlook' move ${pos-fill} ${mon-air11}
layout air11              'Things'            move ${pos-fill} ${mon-air11}

layout mbpro15            'Calendar'          move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'Google Chrome'     move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'HipChat'           move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'iTerm'             move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'MacVim'            move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'Sublime Text'      move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'Mailplane 3'       move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'Mail'              move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'Microsoft Outlook' move ${pos-fill} ${mon-mbpro15}
layout mbpro15            'Things'            move ${pos-fill} ${mon-mbpro15}

layout mbpro13            'Calendar'          move ${pos-fill} ${mon-mbpro13}
