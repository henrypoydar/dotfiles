# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Monitor aliases
alias mon-laptop      1680x1050
alias mon-thunderbolt 2560x1440
alias mon-air11       1366x768

# Modal/sequence alias
alias modal-seq cmd,shift

# Position aliases
alias pos-mid      screenOriginX+screenSizeX/8;screenOriginY+screenSizeY/8 3*screenSizeX/4;3*screenSizeY/4
alias pos-left     screenOriginX;screenOriginY                             screenSizeX/2;screenSizeY
alias pos-right    screenOriginX+screenSizeX/2;screenOriginY               screenSizeX/2;screenSizeY
alias pos-fill     screenOriginX;screenOriginY                             screenSizeX;screenSizeY
alias pos-left-gr  screenOriginX;screenOriginY                             screenSizeX*.62;screenSizeY
alias pos-right-gr screenOriginX+screenSizeX*.62;screenOriginY             screenSizeX*.38;screenSizeY
alias pos-avg      screenOriginX;screenOriginY                             1366;768

# Position bindings
bind m:${modal-seq} move ${pos-mid}
bind 3:${modal-seq} move ${pos-avg}
bind 0:${modal-seq} move ${pos-fill}
bind 6:${modal-seq} move ${pos-left}
bind 7:${modal-seq} move ${pos-right}
bind 8:${modal-seq} move ${pos-left-gr}
bind 9:${modal-seq} move ${pos-right-gr}

# Grid
bind 5:${modal-seq} grid

# Layouts

default laptop resolutions:${mon-laptop}
default air11  resolutions:${mon-air11}
default laptop-thunderbolt resolutions:${mon-laptop};${mon-thunderbolt}

layout laptop-thunderbolt 'Calendar'          move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'Google Chrome'     move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'HipChat'           move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'iTerm'             move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'MacVim'            move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'Mailplane 3'       move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'Mail'              move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'Microsoft Outlook' move ${pos-mid} ${mon-thunderbolt}
layout laptop-thunderbolt 'Things'            move ${pos-mid} ${mon-thunderbolt}

layout laptop             'Calendar'          move ${pos-fill} ${mon-laptop}
layout laptop             'Google Chrome'     move ${pos-fill} ${mon-laptop}
layout laptop             'HipChat'           move ${pos-fill} ${mon-laptop}
layout laptop             'iTerm'             move ${pos-fill} ${mon-laptop}
layout laptop             'MacVim'            move ${pos-fill} ${mon-laptop}
layout laptop             'Mailplane 3'       move ${pos-fill} ${mon-laptop}
layout laptop             'Mail'              move ${pos-fill} ${mon-laptop}
layout laptop             'Microsoft Outlook' move ${pos-fill} ${mon-laptop}
layout laptop             'Things'            move ${pos-fill} ${mon-laptop}

layout air11              'Calendar'          move ${pos-fill} ${mon-laptop}
layout air11              'Google Chrome'     move ${pos-fill} ${mon-laptop}
layout air11              'HipChat'           move ${pos-fill} ${mon-laptop}
layout air11              'iTerm'             move ${pos-fill} ${mon-laptop}
layout air11              'MacVim'            move ${pos-fill} ${mon-laptop}
layout air11              'Mailplane 3'       move ${pos-fill} ${mon-laptop}
layout air11              'Mail'              move ${pos-fill} ${mon-laptop}
layout air11              'Microsoft Outlook' move ${pos-fill} ${mon-laptop}
layout air11              'Things'            move ${pos-fill} ${mon-laptop}
