set linespace=5
set gfn=Menlo\ Regular:h20
set guioptions-=r " Hide right scrollbar
set guioptions-=L " Hide left scrollbar

set colorcolumn=80

" Custom colors
source ~/.vim.local/colors/ir_black_tweaked.vim

" Map commenting
if has("gui_macvim")
  map <D-/> <Plug>NERDCommenterToggle<CR>
endif

" Run ruby scripts in the terminal
source ~/.vim.local/tools/run_file_in_terminal.vim
"map <D-r> :let g:vim_terminal="/dev/ttys000"

